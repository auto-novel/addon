{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "manifest_version": 3,
    "version": "1.1.0",
    "name": "轻小说机翻机器人",
    "author": "kurikomoe",
    "homepage_url": "https://n.novelia.cc/",
    "description": "轻小说机翻站用户侧爬虫插件",
    "chrome:key": "",
    "browser_specific_settings": {
      "gecko": {
        "id": "addon@n.novelia.cc"
      }
    },
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png",
      "256": "icons/256.png",
      "512": "icons/512.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/48.png"
        },
        "default_title": "轻小说机翻站-用户侧爬虫"
    },
    "chrome:background": {
        "service_worker": "src/worker.ts"
    },
    "firefox:background": {
        "scripts": [ "src/worker.ts" ]
    },
    "chrome:externally_connectable": {
      "matches": [
        "*://*.novelia.cc/*",
        "*://*.fishhawk.top/*",
        "*://localhost/*",
        "*://example.com/*"
      ]
    },
    "host_permissions": [
        "*://localhost/*",

        "*://*.novelia.cc/*",
        "*://*.fishhawk.top/*",

        "*://*.baidu.com/*",
        "*://*.youdao.com/*",
        "*://*.openai.com/*",
        "*://*.amazon.co.jp/*",
        "*://kakuyomu.jp/*",
        "*://*.syosetu.com/*",
        "*://novelup.plus/*",
        "*://syosetu.org/*",
        "*://*.pixiv.net/*",
        "*://*.alphapolis.co.jp/*",
        "*://novelism.jp/*"
    ],
    "chrome:permissions": [
        "debugger",
        "scripting",
        "tabs",
        "cookies",
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "webRequest"
    ],
    "firefox:permissions": [
        "scripting",
        "tabs",
        "cookies",
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "webRequest",
        "webRequestBlocking"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://n.novelia.cc/*",
                "*://example.com/*",
                "*://localhost/*"
            ],
            "js": [
                "src/content/auto-novel.ts"
            ],
            "run_at": "document_start"
        }
    ]
}
