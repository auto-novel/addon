{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "轻小说机翻站-用户侧爬虫",
    "author": "kurikomoe",
    "homepage_url": "https://n.novelia.cc/",
    "description": "轻小说机翻站用户侧爬虫插件，用于辅助采集轻小说网站内容。",
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png",
      "256": "icons/256.png",
      "512": "icons/512.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/48.png"
        },
        "default_title": "轻小说机翻站-用户侧爬虫"
    },
    "background": {
        "service_worker": "src/worker.ts"
    },
    "externally_connectable": {
      "matches": [
        "*://*.novelia.cc/*",
        "*://*.fishhawk.top/*",
        "*://localhost/*",
        "*://example.com/*"
      ]
    },
    "host_permissions": [
        "*://example.com/*",
        "*://echo.free.beeceptor.com/*",
        "*://localhost/*",

        "*://*.novelia.cc/*",
        "*://*.fishhawk.top/*",

        "*://*.baidu.com/*",
        "*://*.youdao.com/*",
        "*://*.openai.com/*",
        "*://*.amazon.co.jp/*",
        "*://kakuyomu.jp/*",
        "*://*.syosetu.com/*",
        "*://novelup.plus/*",
        "*://syosetu.org/*",
        "*://*.pixiv.net/*",
        "*://*.alphapolis.co.jp/*",
        "*://novelism.jp/*"
    ],
    "permissions": [
        "debugger",
        "scripting",
        "tabs",
        "cookies",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://n.novelia.cc/*",
                "*://example.com/*",
                "*://localhost/*"
            ],
            "js": [
                "src/content/auto-novel.ts"
            ],
            "run_at": "document_start"
        }
    ]
}
