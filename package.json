{
  "name": "addon",
  "description": "轻小说机翻站用户侧爬虫插件",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip -b chrome --mv3",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "compile": "vue-tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "set-cookie-parser": "^2.7.1",
    "tailwindcss": "^4.1.14",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/chrome": "^0.1.22",
    "@types/node": "^24.7.0",
    "@types/set-cookie-parser": "^2.4.10",
    "@wxt-dev/auto-icons": "^1.1.0",
    "@wxt-dev/module-vue": "^1.0.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vue-tsc": "^3.0.6",
    "web-ext": "^9.0.0",
    "wxt": "^0.20.6"
  }
}
